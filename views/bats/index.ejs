<div class="row">
    <div class="col-12">
        <h2 class="page-title">All Bats</h2>
    </div>
</div>

<div class="row">
    <% bats.forEach(bat => { %>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="position-relative">
                    <img src="<%= bat.image %>" class="card-img-top" alt="<%= bat.brandName %>">
                    <div class="position-absolute top-0 end-0 p-2">
                        <span class="badge bg-primary">
                            <i class="fas fa-dollar-sign me-1"></i><%= bat.price %>
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-tag me-2"></i><%= bat.brandName %>
                    </h5>
                    <p class="card-text">
                        <i class="fas fa-user-tie me-2"></i><%= bat.brandAmbassador %>
                    </p>
                    <div class="d-grid">
                        <a href="/bats/<%= bat._id %>" class="btn btn-primary">
                            <i class="fas fa-info-circle me-2"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% }); %> 